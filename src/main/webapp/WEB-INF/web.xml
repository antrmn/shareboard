<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>

    <!-- TODO: error page per 401 403 e 500 -->

    <session-config>
        <session-timeout>30</session-timeout>
        <cookie-config>
            <http-only>true</http-only>
            <secure>false</secure>
            <max-age>2147483647</max-age>
        </cookie-config>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>

    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>loggedUserChecker</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>userAuthorizer</filter-name>
        <url-pattern>/vote</url-pattern>
        <url-pattern>/unvote</url-pattern>
        <url-pattern>/newcomment</url-pattern>
        <url-pattern>/newpost</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>redirectLoggedUser</filter-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/register</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>redirectGuest</filter-name>
        <url-pattern>/logout</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
<!--    <filter-mapping>-->
<!--        <filter-name>adminAuthorizer</filter-name>-->
<!--        <url-pattern>/admin/*</url-pattern>-->
<!--        <dispatcher>REQUEST</dispatcher>-->
<!--    </filter-mapping>-->
    <filter-mapping>
        <filter-name>aliasesFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
            <scripting-invalid>true</scripting-invalid> <!-- Disabilita scriptlet !-->
        </jsp-property-group>
    </jsp-config>
</web-app>